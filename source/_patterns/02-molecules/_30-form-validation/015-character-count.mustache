<form class="form">

  <h1 class="heading--gamma form-title">

    Sample form with character counters

  </h1>

  <fieldset class="fieldset fieldset--alt">

    <label class="fieldset__label visuallyhidden">
      First name
    </label>

    <input type="text" placeholder="First name" value="" class="text-field--alt fieldset__input" maxlength="20" onkeyup="charCount(this)">

    <div class="fieldset__helper-text character-count fieldset__character-count">
      <span class="character-count__total">
        0
      </span>
      <span class="character-count__max">
        / 20
      </span>
    </div>

  </fieldset>

  <fieldset class="fieldset fieldset--alt">

    <label class="fieldset__label visuallyhidden">
      Last name
    </label>

    <input type="text" placeholder="Last name" value="" class="text-field--alt fieldset__input" maxlength="20" onkeyup="charCount(this)">

    <div class="fieldset__helper-text character-count fieldset__character-count">
      <span class="character-count__total">
        0
      </span>
      <span class="character-count__max">
        / 20
      </span>
    </div>

  </fieldset>

  <fieldset class="fieldset fieldset--alt">

    <label class="fieldset__label visuallyhidden">
      Date of birth
    </label>

    <input type="text" placeholder="Date of birth" value="" class="text-field--alt fieldset__input">

    <div class="fieldset__helper-text">
      MM/DD/YYYY
    </div>

  </fieldset>

  <fieldset class="fieldset fieldset--alt">

    <label class="fieldset__label visuallyhidden">
      Social security
    </label>

    <input type="text" placeholder="Social Security" value="" class="text-field--alt fieldset__input">

    <div class="fieldset__helper-text">
      ###-##-####
    </div>

  </fieldset>

</form>
