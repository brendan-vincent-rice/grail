{{# pl-heading-palette }}

<div class="gr-o-grid gr-pl-o-palette gr-pl-o-palette--headings">

  {{# item }}

  <div class="gr-o-grid__item gr-pl-o-palette__item">

    <div class="gr-pl-o-palette__box gr-pl-o-palette__box--heading">

      <div class="gr-pl-o-palette__swatch gr-pl-o-palette__swatch--heading">
        <h{{ level }} class="gr-c-heading{{# modifier }} {{ modifier }}{{/ modifier }}">
          {{ text }}
        </h{{ level }}>
      </div>

      <div class="gr-pl-o-palette__details">
        <ul class="gr-pl-o-palette__list">
          <li class="gr-pl-o-palette__list-item">
            {{ class }}
          </li>
        </ul>
      </div>
      
    </div>

  </div>

  {{/ item }}

</div>

{{/ pl-heading-palette }}
