{{# search-results }}

<ul class="search-results">

  {{# item }}

  <li class="search-results__item">

    {{# interactive-map }}
    {{!> atoms-bing-interactive-map }}
    {{/ interactive-map }}

    <div class="search-results__details">

      <h3 class="heading heading--delta search-results__heading">
        <a class="search-results__link" href="">
          {{ link-text }}
        </a>
      </h3>

      {{# url }}
      <p class="search-results__text">
        {{ url }}
      </p>
      {{/ url }}

      {{# date }}
      <p class="search-results__date">
        {{ date }}
      </p>
      {{/ date }}

      {{# brief }}
      <p class="search-results__brief">
        {{{ brief }}}
      </p>
      {{/ brief }}

      {{# phone }}
      <p class="search-results__brief">

        Phone: {{ phone }}

        {{# fax }}
        <br>Fax: {{ fax }}
        {{/ fax }}

      </p>
      {{/ phone }}

      {{# hours }}
      <p class="search-results__brief">

        Hours: {{ hours }}

      </p>
      {{/ hours }}

      {{# inspection-types }}
      <p class="search-results__inspection-types">
        {{{ inspection-types }}}
      </p>
      {{/ inspection-types }}

      {{# directions-link }}
      <p class="search-results__brief">
        <a href="{{ directions-link-url }}">{{ directions-link }}</a>

        {{# mailing-address-link }}
        |
        <a href="{{ mailing-address-link-url }}">
          {{ mailing-address-link }}
        </a>
        {{/ mailing-address-link }}

      </p>
      {{/ directions-link }}

    </div>

  </li>

  {{/ item }}

</ul>

{{/ search-results }}
