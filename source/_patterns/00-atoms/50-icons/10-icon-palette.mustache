{{# pl-icon-palette }}

<div class="gr-o-grid gr-pl-o-palette gr-pl-o-palette--icons">

  {{# item }}

  <div class="gr-o-grid__item gr-pl-o-palette__item">

    <div class="gr-pl-o-palette__box gr-pl-o-palette__box--icons">

      <div class="gr-pl-o-palette__swatch gr-pl-o-palette__swatch--icon">
        <i class="{{ class }}"></i> 
      </div>
      
      <div class="gr-pl-o-palette__details">
        <ul class="gr-pl-o-palette__list">
          <li class="gr-pl-o-palette__list-item gr-pl-o-palette__heading">
            {{ name }} 
          </li>
          <li class="gr-pl-o-palette__list-item">
            {{ class }}
          </li>
        </ul>
      </div>
      
    </div>
  </div>

  {{/ item }}

</div>

{{/ pl-icon-palette }}