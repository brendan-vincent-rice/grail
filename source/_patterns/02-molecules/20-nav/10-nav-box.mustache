{{# nav-box }}

<nav class="gr-c-nav-box {{ class }}">

  {{# heading }}
  <h2 class="gr-c-heading gr-c-nav-box__heading">
    {{ heading }}
  </h2>
  {{/ heading }}

  <ul class="gr-c-nav-box__list">

    {{# item }}

    <li class="gr-c-nav-box__item {{ nav-box-item-class }}">
      <a class="gr-c-nav-box__link" href="{{ url }}">
        <i class="{{ icon-class }}">
        </i>
        {{ link-text }}
      </a>
    </li>

    {{/ item }}

  </ul>
</nav>

{{/ nav-box }}