<div class="gr-o-grid gr-c-form gr-c-form--payment">

  <fieldset class="gr-c-form__item gr-c-form__item--fill">
    <label for="card_number" class="gr-c-form__label">
      Card number
    </label>
    <input type="number" name="card_number" class="gr-c-text-input gr-c-form__text-input" id="card_number" min="1" max="9999999999999999" placeholder="4242 4242 4242 4242">
  </fieldset>

  <fieldset class="gr-c-form__item">
    <label for="expiry_date" class="c-label">
      Expiry date
    </label>
    <input type="text" name="expiry_date" class="gr-c-text-input gr-c-form__text-input" id="expiry_date" placeholder="MM/YY">
  </fieldset>

  <fieldset class="gr-c-form__item">
    <label for="cvv" class="c-label">
      CVV
    </label>
    <input type="number" name="cvv" class="gr-c-text-input gr-c-form__text-input" id="cvv" min="1" max="999" placeholder="123">
  </fieldset>

  <fieldset class="gr-c-form__item">
    <label for="zip_code" class="c-label">
      Zip Code
    </label>
    <input type="text" name="zip_code" class="gr-c-text-input gr-c-form__text-input" id="zip_code" placeholder="12345">
  </fieldset>

  <fieldset class="gr-c-form__item gr-c-form__item--fill gr-c-form__item--check">
    <input type="checkbox" name="wants_receipt" class="" id="wants_receipt">
    <label for="wants_receipt" class="c-check-field__label">
      Receive a copy of the receipt in your inbox?
    </label>
  </fieldset>

  <fieldset class="gr-c-form__item gr-c-form__item--fill gr-c-form__item--btn">
    <a class="gr-c-btn gr-c-form__btn" href="">
      Pay
    </a>
  </fieldset>

</div>